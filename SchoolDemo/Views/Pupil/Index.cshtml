@model IEnumerable<SchoolDemo.Models.Pupil>

<p>
    @Html.ActionLink("Добавить", "Create")
</p>
<table class="table">
    <tr>
        <th>
           @Html.DisplayNameFor(model => model.c.ClassName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FullName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DOB)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.HomeAdress)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.c.ClassName)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.FullName)
    </td>
    
    <td>@item.DOB.ToString("dd.MM.yyyy")</td>
    
    <td>
        @Html.DisplayFor(modelItem => item.HomeAdress)
    </td>
    <td>
        @Html.ActionLink("Изменить", "Edit", new { id = item.Id }) |
        @Html.ActionLink("Удалить", "Delete", new { id = item.Id })
    </td>
</tr>
}

</table>
